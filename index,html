    <script>
     // 頁面載入時，取得所有子資料夾
      window.onload = function() {
        google.script.run
          .withSuccessHandler(populateFolderDropdown)
          .getSubfolders();
          
        // 為所有按鈕添加波紋效果
        document.addEventListener('click', function(e) {
          if (e.target.tagName === 'BUTTON') {
            createRipple(e);
          }
        });
        
        // 添加第三個字母元素
        var thirdLetter = document.createElement('div');
        thirdLetter.className = 'third-letter';
        thirdLetter.textContent = 'C';
        document.body.appendChild(thirdLetter);
      };

      // 創建波紋效果的函數
      function createRipple(event) {
        const button = event.currentTarget;
        
        // 移除任何現有的波紋
        const ripples = button.getElementsByClassName('ripple');
        for (let i = 0; i < ripples.length; i++) {
          ripples[i].remove();
        }
        
        const circle = document.createElement('span');
        const diameter = Math.max(button.clientWidth, button.clientHeight);
        const radius = diameter / 2;
        
        const rect = button.getBoundingClientRect();
        
        circle.style.width = circle.style.height = `${diameter}px`;
        circle.style.left = `${event.clientX - rect.left - radius}px`;
        circle.style.top = `${event.clientY - rect.top - radius}px`;
        circle.classList.add('ripple');
        
        button.appendChild(circle);
      }

      function populateFolderDropdown(folders) {
        var folderSelect = document.getElementById("folderSelect");
        folderSelect.innerHTML = "";
        var defaultOption = document.createElement("option");
        defaultOption.value = "";
        defaultOption.text = "請選擇部門";
        folderSelect.appendChild(defaultOption);

        folders.forEach(function(folder) {
          var option = document.createElement("option");
          option.value = folder.id;
          option.text = folder.name;
          folderSelect.appendChild(option);
        });
      }

      function onFolderChange() {
        var folderId = document.getElementById("folderSelect").value;
        var keyword = document.getElementById("keywordInput").value.trim();
        var fileSelect = document.getElementById("fileSelect");
        var resultDiv = document.getElementById("result");

        fileSelect.innerHTML = "";
        resultDiv.innerHTML = "";

        if (!folderId) return;

        google.script.run
          .withSuccessHandler(populateFileDropdown)
          .getFiles(folderId, keyword);
      }

      function onKeywordChange() {
        var folderId = document.getElementById("folderSelect").value;
        if (folderId) {
          onFolderChange();
        }
      }

      function populateFileDropdown(files) {
        var fileSelect = document.getElementById("fileSelect");
        fileSelect.innerHTML = "";

        var defaultOption = document.createElement("option");
        defaultOption.value = "";
        defaultOption.text = "請選擇資料";
        fileSelect.appendChild(defaultOption);

        if (!files.length) {
          var noOption = document.createElement("option");
          noOption.value = "";
          noOption.text = "無符合的檔案";
          fileSelect.appendChild(noOption);
          return;
        }

        files.forEach(function(file) {
          var option = document.createElement("option");
          option.value = file.id;
          option.text = file.name;
          option.dataset.mimeType = file.mimeType;
          fileSelect.appendChild(option);
        });
      }

      function retrieveFile() {
        var folderSelect = document.getElementById("folderSelect");
        var vendorName = folderSelect.options[folderSelect.selectedIndex].text;

        var fileSelect = document.getElementById("fileSelect");
        var fileId = fileSelect.value;
        var fileName = fileSelect.options[fileSelect.selectedIndex]?.text;

        if (!fileId) {
          alert("請先選擇檔案！");
          return;
        }

        // 1) 寫入紀錄
        google.script.run
          .logRetrieval(vendorName, fileName);

        // 2) 取得檔案預覽連結
        google.script.run
          .withSuccessHandler(displayFileContents)
          .getFilePreviewUrl(fileId);
      }

      function displayFileContents(fileInfo) {
        var resultDiv = document.getElementById("result");
        resultDiv.innerHTML = "";

        if (fileInfo.mimeType === "application/pdf") {
          var iframe = document.createElement("iframe");
          iframe.src = fileInfo.url;
          resultDiv.appendChild(iframe);
        } else if (
          fileInfo.mimeType.startsWith("application/vnd.openxmlformats-officedocument") ||
          fileInfo.mimeType.startsWith("application/vnd.google-apps")
        ) {
          var iframe = document.createElement("iframe");
          iframe.src = fileInfo.url;
          resultDiv.appendChild(iframe);
        } else {
          var link = document.createElement("a");
          link.href = fileInfo.url;
          link.target = "_blank";
          link.className = "download-link";
          link.textContent = "點擊此處下載檔案";
          resultDiv.appendChild(link);
        }
      }

      // 按下【查詢統計】
      function showStatistics() {
        google.script.run
          .withSuccessHandler(function(statData) {
            drawCharts(statData);
          })
          .getStatisticsDataOnly();
      }

      // 繪製 Google Charts
      function drawCharts(statData) {
        var modal = document.getElementById("statsModal");
        var statsContent = document.getElementById("statsContent");
        // 加入一個返回按鈕
        statsContent.innerHTML = `
          <span id="closeModal">&times;</span>
          <h3>部門次數統計圖</h3>
          <div id="chartVendor" style="width:100%; height:400px;"></div>
          <hr style="border:none; height:2px; background:linear-gradient(90deg, transparent, rgba(33, 147, 176, 0.3), transparent); margin:30px 0;"/>
          <h3>查詢資料次數統計圖</h3>
          <div id="chartFile" style="width:100%; height:400px;"></div>
          <div style="text-align:center; margin-top:30px;">
            <button id="backButton" style="
                           padding: 12px 25px; 
              background: linear-gradient(45deg, #2193b0, #6dd5ed); 
              border: none; 
              border-radius: 50px; 
              color: white; 
              font-size: 3em; 
              cursor: pointer;
              box-shadow: 0 8px 15px rgba(33, 147, 176, 0.3),
                          0 4px 6px rgba(0,0,0,0.1);
              -webkit-transition: all 0.3s ease;
              transition: all 0.3s ease;
              font-weight: bold;
              min-height: 60px;
            ">
              返回
            </button>
          </div>
        `;
        modal.style.display = "flex";

        var closeBtn = document.getElementById("closeModal");
        closeBtn.onclick = function() {
          modal.style.display = "none";
          statsContent.innerHTML = "";
        };
        window.onclick = function(event) {
          if (event.target === modal) {
            modal.style.display = "none";
            statsContent.innerHTML = "";
          }
        };  

        // 載入 Google Charts
        google.charts.load("current", {packages:["corechart"]});
        google.charts.setOnLoadCallback(function() {
          // --- 廠商次數統計 ---
          var vendorData = new google.visualization.DataTable();
          vendorData.addColumn('string', '部門');
          vendorData.addColumn('number', '次數');
          vendorData.addRows(statData.vendors);

          var vendorOptions = {
            title: '部門次數統計圖',
            titleTextStyle: {
              color: '#0b5269',
              fontSize: 16,
              bold: true
            },
            legend: { position: 'none' },
            colors: ['#2193b0', '#6dd5ed', '#3cb371', '#20b2aa'],
            animation: {
              startup: true,
              duration: 800,  // 縮短動畫時間
              easing: 'out'
            },
            chartArea: {
              width: '80%',
              height: '70%'
            },
            backgroundColor: 'transparent',
            hAxis: {
              textStyle: { 
                color: '#0b5269',
                fontSize: 14
              }
            },
            vAxis: {
              textStyle: { 
                color: '#0b5269',
                fontSize: 14
              },
              gridlines: {
                color: '#e4f1f9'
              }
            },
            bar: { groupWidth: '65%' },
            axisTitlesPosition: 'none'
          };

          var vendorChart = new google.visualization.ColumnChart(document.getElementById('chartVendor'));
          vendorChart.draw(vendorData, vendorOptions);

          // --- 檔案次數統計 ---
          var fileData = new google.visualization.DataTable();
          fileData.addColumn('string', '檔案名稱');
          fileData.addColumn('number', '次數');
          fileData.addRows(statData.files);

          var fileOptions = {
            title: '檔案次數統計圖',
            titleTextStyle: {
              color: '#0b5269',
              fontSize: 16,
              bold: true
            },
            legend: { position: 'none' },
            colors: ['#3cb371', '#20b2aa', '#2193b0', '#6dd5ed'],
            animation: {
              startup: true,
              duration: 800,
              easing: 'out'
            },
            chartArea: {
              width: '80%',
              height: '70%'
            },
            backgroundColor: 'transparent',
            hAxis: {
              textStyle: { 
                color: '#0b5269',
                fontSize: 14
              }
            },
            vAxis: {
              textStyle: { 
                color: '#0b5269',
                fontSize: 14
              },
              gridlines: {
                color: '#e4f1f9'
              }
            },
            bar: { groupWidth: '65%' },
            axisTitlesPosition: 'none'
          };

          var fileChart = new google.visualization.ColumnChart(document.getElementById('chartFile'));
          fileChart.draw(fileData, fileOptions);
        });

        // 添加返回按鈕點擊事件
        document.getElementById("backButton").addEventListener("click", function() {
          modal.style.display = "none";
          statsContent.innerHTML = "";
        });
        
        // 為返回按鈕添加波紋效果
        document.getElementById("backButton").addEventListener("click", function(e) {
          createRipple(e);
        });
      }
    </script>
